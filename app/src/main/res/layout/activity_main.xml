            android:layout_gravity="bottom"
            android:layout_marginStart="300dp"
            android:layout_marginBottom="15dp"
            android:background="@drawable/signupbtn"
            android:text="Buy"
            android:id="@+id/buy"
            android:textSize="15dp"
            />
